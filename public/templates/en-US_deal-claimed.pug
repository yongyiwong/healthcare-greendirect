table(width="100%" border="0" cellspacing="0" cellpadding="0")
  tr
    td(style="font-family: 'Open Sans', sans-serif; font-size: 14px; line-height: 20px; color: #454545")
      table(width="100%" border="0" cellspacing="0" cellpadding="0")
        tr
          td(style="text-align: center; background-color: #f4f4f4; padding-left: 100px; padding-right: 100px; padding-top: 40px; padding-bottom: 40px")
            table(style="margin-left: auto; margin-right: auto; max-width: 600px" width="100%" border="0" cellspacing="0" cellpadding="0")
              tr
                td(style="text-align: center; background-color: white; border-radius: 20px; padding-top: 35px; padding-bottom: 20px")
                  table(width="100%" border="0" cellspacing="0" cellpadding="0")
                    tr
                      td(style="padding-left: 85px; padding-right: 85px; padding-bottom: 20px" align="center")
                        p(style="margin-top: 0; margin-bottom: 30px")
                          img(src=`${baseUrl}/assets/static/greendirect-full.png` width="168" height="37" alt="GreenDirect")
                        p(style="margin-top: 0; margin-bottom: 30px")
                          img(src=deal.imageUrl height="212" alt="deal image")
                        p(style="font-weight: 600; font-size: 20px; line-height: 32px; margin-top: 0; margin-bottom: 0") Your daily deal:
                        p(style="font-weight: 600; font-size: 20px; line-height: 32px; margin-top: 0; margin-bottom: 0") #{deal.title}
                        p(style="margin-top: 20px; margin-bottom: 0") #{deal.description}
                        p(style="margin-top: 10px; margin-bottom: 0") Expires #{dealExpirationDate}
                        p(style="opacity: 0.5; margin-top: 20px; margin-bottom: 0") Print this out or present in-store on your device.
                        p(style="opacity: 0.5; margin-top: 0; margin-bottom: 0; font-size: 12px") **** No other coupons or discounts can be applied to this deal ****

                  if deal.dealLocations.length === 1
                    //- only show to store location part when deal is for one location only
                    //- this is hidden on multiple locations deal
                    hr(style="opacity: 0.2; border-bottom: 0")

                    table(width="100%" border="0" cellspacing="0" cellpadding="0")
                      tr
                        td(style="padding-left: 85px; padding-right: 85px; padding-top: 20px" align="center")
                          img(src=`${baseUrl}/assets/static/map-icon.png` width="40" height="40" alt="icon")
                          p(style="margin-top: 10px; margin-bottom: 0") Store Location:
                          p(style="color: #23c5e0; margin-top: 0; margin-bottom: 0")
                            = [location.addressLine1, location.addressLine2, location.city, location.state && location.state.abbreviation, location.postalCode].filter(Boolean).join(', ')

            table(width="100%" border="0" cellspacing="0" cellpadding="0")
              tr
                td(style="font-size: 10px; line-height: 16px; padding-top: 24px; opacity: 0.25; color: #0c0033" align="center")
                  p(style="margin-top: 0; margin-bottom: 0") #{copyrightFooterText}
                  p
                    a(href="https://www.facebook.com/greendirectpr" target="_blank" style="margin-right: 16px")
                      img(src=`${baseUrl}/assets/static/facebook-icon.png` width="24" height="24" alt="Facebook")
                    a(href="https://www.instagram.com/greendirectpr" target="_blank")
                      img(src=`${baseUrl}/assets/static/instagram-icon.png` width="24" height="24" alt="Instagram")
